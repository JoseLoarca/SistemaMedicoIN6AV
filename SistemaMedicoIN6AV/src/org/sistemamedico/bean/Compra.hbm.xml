<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="org.sistemamedico.bean.Compra" table="compra">
		<id name="idCompra" type="java.lang.Integer">
			<column name="idCompra" />
            <generator class="assigned" />
		</id>
		<property name="nombre" type="java.lang.String">
            <column name="nombre" />
        </property>
		<property name="cantidad" type="java.lang.Integer">
		    <column name="cantidad" />
		</property>
		<property name="fecha" type="java.lang.Date">
		    <column name="fecha" />
		</property>
		<many-to-one name="idUsuario" class="org.sistemamedico.Usuario" lazy="false">
			<column  name="idUsuario"/>
		</many-to-one>
	</class>
</hibernate-mapping>