<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="org.sistemamedico.bean.Cita" table="cita">
		<id name="idCita" type="java.lang.Integer">
			<column name="idCita" />
            <generator class="assigned" />
		</id>
		<property name="fecha" type="java.lang.Date">
            <column name="fecha" />
        </property>
		<property name="hora" type="java.lang.String">
		    <column name="hora" />
		</property>
		<many-to-one name="idUsuario" class="org.sistemamedico.bean.Usuario" lazy="false">
			<column  name="idUsuario"/>
		</many-to-one>
		<many-to-one name="idEnfermedad" class="org.sistemamedico.bean.Enfermedad" lazy="false">
			<column  name="idEnfermedad"/>
		</many-to-one>
	</class>
</hibernate-mapping>